---
# A collection of all posts.
title: Posts
layout: layouts/page-default
pagination:
    data: collections.postsr
    size: 7
permalink: /posts{% if pagination.pageNumber > 0 %}/{{ pagination.pageNumber }}{% endif %}/index.html
---

{% from "post/preview.html" import render_post_preview with context %}

{% include "utilities/mobile-go-to-tags.html" %}

<div class="page-content-container row gx-lg-5">
    <div class="col-lg-4">
        {% include "sidebars/tag-cloud-grouped-sidebar.html" %}
    </div>

    <div class="col-lg-8">
        {# Main Content #}
        {% include "pagination-links.html" %}

        <div class="post-preview-list">
            {% for post in pagination.items %}
                {{ render_post_preview(post) }}
            {% endfor %}
        </div>

        {% include "pagination-links.html" %}
    </div>
</div>