---
---

{
  "tracks": [
    {% assign iter = 0 %}
    {% for post in site.posts %}
      {% if post.tags contains 'music' %}
        {% if iter > 0 %},{% endif %}
        {% assign iter = iter | plus: 1 %}
        {
          "track_id": {{post.track_id}},
          "tags": ["{{post.tags | join: '", "'}}"],
          "date": "{{post.date | date: '%Y-%m-%d'}}",
          "description": "{{post.content | strip_html | truncatewords: 20}}",
          "url": "{{post.url}}"
        }
      {% endif %}
    {% endfor %}
  ]
}
